@import '~antd/lib/style/themes/default.less';
@import '../../../utils/utils.less';

.typeCard {
  :global {
    .ant-btn {
      margin-right: 10px;
      margin-bottom: 10px;
    }
  }
}

.iconWrap {
  position: absolute;
  top: -15px;
  right: -10px;
  background-color: #f5f5f5;
  border-radius: 2px;
  padding: 0 2px;
  i:first-of-type {
   margin-right: 10px; 
   cursor: pointer;
  }
  i:last-of-type {
    cursor: pointer;
  }
}

.tableList {
  :global {
    .ant-card-head {
      border-bottom: none;
    }
    .ant-card-head-title {
      line-height: 32px;
      padding: 24px 0;
    }
    .ant-card-extra {
      padding: 24px 0;
    }
    .ant-list-pagination {
      text-align: right;
      margin-top: 24px;
    }
    .ant-avatar-lg {
      width: 48px;
      height: 48px;
      line-height: 48px;
    }
  }
  .extraContentSearch {
    margin-left: 16px;
    width: 272px;
  }
}

.tableList {
  .tableListOperator {
    margin-bottom: 16px;
    button {
      margin-right: 8px;
    }
  }
}

.table {
  height: 300px;
}

@media screen and (max-width: @screen-xs) {
  .tableList {
    :global {
      .ant-list-item-content {
        display: block;
        flex: none;
        width: 100%;
      }
      .ant-list-item-action {
        margin-left: 0;
      }
    }
    .listCard {
      :global {
        .ant-card-head-title {
          overflow: visible;
        }
      }
    }
  }
}

@media screen and (max-width: @screen-sm) {
  .tableList {
    .extraContentSearch {
      margin-left: 0;
      width: 100%;
    }
  }
}

@media screen and (max-width: @screen-md) {
  .listCard {
    :global {
      .ant-radio-group {
        display: block;
        margin-bottom: 8px;
      }
    }
  }
}

