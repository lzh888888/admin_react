import http from '../utils/http';

async function getPartner() {
  return http({ method: 'get', url: '/api/partner' });
}

export default {
  namespace: 'partner',

  state: {
    list: [],
  },

  effects: {
    *fetch(_, { call, put }) {
      const response = yield call(getPartner);
      yield put({
        type: 'save',
        payload: Array.isArray(response) ? response : [],
      });
    },
  },

  reducers: {
    save(state, action) {
      return {
        ...state,
        list: action.payload,
      };
    },
  },
};
