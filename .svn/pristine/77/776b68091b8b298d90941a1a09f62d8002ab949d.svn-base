import React from 'react';
import { connect } from 'dva';
import { Modal } from 'antd';

import ChooseImage from '../../../cps/ChooseImage';

export default connect(({ subunit }) => ({
  subunit,
}))((props) => {
  const {
    dispatch,
    subunit: { showModalDetail, activeItem },
  } = props;

  const handleOk = () => { };

  const handCancel = () => {
    dispatch({
      type: 'subunit/_hideModal',
      payload: { type: 'Detail' },
    });
  };

  const renderAvatar = () => {
    const { image } = activeItem;
    return (
      <div className="avatar-container">
        {!!image && <ChooseImage isClearIcon={false} source={image} />}
      </div>
    );
  };

  const renderAllow = () => {
    const { allow } = activeItem;
    const value = allow;
    if (value === '1') {
      return <span>是</span>;
    } else if (value === '0') {
      return <span>否</span>;
    }
  };

  const items = [
    { label: '用户名', content: activeItem.username },
    { label: '公司名称', content: activeItem.companyname },
    { label: '用户类型', content: activeItem.usertype },
    { label: '手机号码', content: activeItem.linkphone },
    { label: '联系电话', content: activeItem.tel },
    { label: '联系地址', content: activeItem.address },
    { label: '发票类型', content: activeItem.invoicetype },
    { label: '是否允许使用', content: renderAllow() },
  ];

  const itemStyle = {
    display: 'flex',
    flexDirection: 'row',
  };
  const itemLabelStyle = {
    width: 100,
    color: '#74777c',
  };
  const itemContentStyle = {
    flex: 1,
    color: '#454a51',
  };

  return (
    <Modal
      title="详细"
      footer={null}
      maskClosable={false}
      visible={showModalDetail}
      onOk={handleOk}
      onCancel={handCancel}
    >
      <div>
        {items.map((v, k) => (
          <div style={itemStyle} key={k}>
            <p style={itemLabelStyle}>{v.label}</p>
            <p style={itemContentStyle}>{v.content}</p>
          </div>
        ))}
        {renderAvatar()}
      </div>
    </Modal>
  );
});
