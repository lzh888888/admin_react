import React from 'react';
import { connect } from 'dva';
import { Modal } from 'antd';

export default connect(({ catererManage }) => ({
  catererManage,
}))((props) => {
  const {
    dispatch,
    catererManage: { showModalDetail, activeItem },
  } = props;

  const handleOk = () => { };

  const handCancel = () => {
    dispatch({
      type: 'catererManage/_hideModal',
      payload: { type: 'Detail' },
    });
  };

  const renderIsadmin = () => {
    const { isadmin } = activeItem;
    const value = isadmin;
    if (value === '1') {
      return (
        <span>是</span>
      );
    } else if (value === '0') {
      return (
        <span>否</span>
      );
    }
  }

  const renderAllow = () => {
    const { allow } = activeItem;
    const value = allow;
    if (value === '0') {
      return (
        <span>否</span>
      );
    } else if (value === '1') {
      return (
        <span>是</span>
      );
    }
  }

  const items = [
    { label: '用户名', content: activeItem.username },
    { label: '手机号码', content: activeItem.phoneno },
    { label: '是否为管理员', content: renderIsadmin() },
    { label: '是否允许使用', content: renderAllow() },
    { label: '营业时间', content: activeItem.shophours },
    { label: '登录次数', content: activeItem.logincnt },
    { label: '注册时间', content: activeItem.regdate },
  ];

  const itemStyle = {
    display: 'flex',
    flexDirection: 'row',
  };
  const itemLabelStyle = {
    width: 100,
    color: '#74777c',
  };
  const itemContentStyle = {
    flex: 1,
    color: '#454a51',
  };

  return (
    <Modal
      title="详细"
      footer={null}
      maskClosable={false}
      visible={showModalDetail}
      onOk={handleOk}
      onCancel={handCancel}
    >
      <div>
        {items.map((v, k) => (
          <div style={itemStyle} key={k}>
            <p style={itemLabelStyle}>{v.label}</p>
            <p style={itemContentStyle}>{v.content}</p>
          </div>
        ))}
      </div>
    </Modal>
  );
});
