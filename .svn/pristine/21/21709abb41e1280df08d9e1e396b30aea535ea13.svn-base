import React from 'react';
import { connect } from 'dva';
import { Modal } from 'antd';

export default connect(({ recharge }) => ({
  recharge,
}))((props) => {
  const {
    dispatch,
    recharge: { showModalDetail, activeItem },
  } = props;

  const handleOk = () => {};

  const handCancel = () => {
    dispatch({
      type: 'recharge/_hideModal',
      payload: { type: 'Detail' },
    });
  };

  const renderStatus = () => {
    const { status } = activeItem;
    const value = status;
    if(value === '0') {
      return(
        <span>不成功</span>
      );
    } else if(value === '1') {
      return(
        <span>成功</span>
      );
    } 
  }

  const items = [
    { label: '本次金额', content: activeItem.fee },
    { label: '原有金额', content: activeItem.orig_fee },
    { label: '当前金额', content: activeItem.curr_fee },
    { label: '金额类型', content: activeItem.fee_type },
    { label: '付款方式', content: activeItem.pay_type },
    { label: '网银付款返回码', content: activeItem.app_id },
    { label: '付款状态', content: renderStatus() },
  ];

  const itemStyle = {
    display: 'flex',
    flexDirection: 'row',
  };
  const itemLabelStyle = {
    width: 100,
    color: '#74777c',
  };
  const itemContentStyle = {
    flex: 1,
    color: '#454a51',
  };

  return (
    <Modal
      title="详细"
      footer={null}
      maskClosable={false}
      visible={showModalDetail}
      onOk={handleOk}
      onCancel={handCancel}
    >
      <div>
        {items.map((v, k) => (
          <div style={itemStyle} key={k}>
            <p style={itemLabelStyle}>{v.label}</p>
            <p style={itemContentStyle}>{v.content}</p>
          </div>
        ))}
      </div>
    </Modal>
  );
});
